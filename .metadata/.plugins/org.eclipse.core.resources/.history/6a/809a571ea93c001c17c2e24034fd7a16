package Arrays;

import javax.xml.validation.Validator;

public class TargetVal {
	static int Val(int arr[], int index,int target) {

		if(arr.length-1 == index) {
			return -1;
		}
		
		if (target == arr[index]) {
			return index;
		}
		else {
			
		return	Val(arr, index+1,target);
			
		}

			
		
	}

	public static void main(String[] args) {
		int arr[] = {3,2,1,18,19};
		
		int a = Val(arr,0,20);
		
		System.out.println(a);
	}
}
