package Arrays;

import javax.xml.validation.Validator;

public class TargetVal {
	static int Val(int arr[], int index,int target) {
		int count=0;
		if(arr.length-1 == index) {
			return -1;
		}
		
		if (target == arr[0]) {
			return index;
		}
		else {
			count++;
			Val(arr, index+1,target);
			
		}
		return count;
			
		
	}

	public static void main(String[] args) {
		int arr[] = {3,2,1,18,19};
		
		int a = Val(arr,0,1);
		
		System.out.println(a);
	}
}
